                <div class="col-right">
                    <div class="login-form">
                        <h2>Sign Up</h2>
                        <form action="/register" method="POST" id="contactForm" novalidate="novalidate">
                            <p>
                                <input type="text" name="name" placeholder="Username" id="contact-name" required
                                    onkeyup="validateName()">
                                <span id="name-error" class="error"></span>
                            </p>
                            <p>
                                <input type="email" name="email" placeholder="Email" id="contact-email" required
                                    onkeyup="validateEmail()">
                                <span id="email-error" class="error"></span>
                            </p>
                            <p>
                                <input type="number" name="mno" placeholder="Mobile No" id="phone-no" required
                                    onkeyup="validatePhone()">
                                <span id="phone-error" class="error"></span>
                            </p>
                            <p>
                                <input type="password" name="password" placeholder="Password" id="password" required
                                    onkeyup="validatePassword()">
                                <span id="password-error" class="error"></span>
                            </p>
                            <p>
                                <input type="password" name="password2" placeholder="Confirm Password" id="password_two" required
                                    onkeyup="validatePassword()">
                                <span id="password-error_two" class="error"></span>
                            </p>
                            <p>
                                <input class="btn" type="submit" value="Register" id="success"
                                    onclick="return validateForm()" />
                                <span id="submit-error" class="error"></span>
                                
                            </p>
                            <p>
                                <a href="/forgotPassword">Forget password?</a>
                                <a href="/login">Already have an account.</a>
                            </p>

                        </form>
                        <% if(typeof message !=='undefined' ) { %>
                            <p class="mt-3" style="color: rgb(255, 0, 0); font-weight: bold">
                                <%= message %>
                            </p>
                            <% } %>
                    </div>

                </div>
            </div>
        </div>




